    <TextView
        android:id="@+id/workshop_upcoming_appointment_date_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/appointment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/upcoming_appointment_sp_image"
        app:layout_constraintTop_toBottomOf="@+id/workshop_upcoming_appointment_phone" />

    <TextView
        android:id="@+id/workshop_upcoming_appointment_vehicle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
