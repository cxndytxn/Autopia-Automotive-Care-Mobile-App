<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ui.WorkshopNavigationDrawerActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/workshop_app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/workshop_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
            app:popupTheme="@style/Theme.Autopia.PopupOverlay"
            app:subtitleTextColor="@color/black"
            app:titleTextColor="@color/grey" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_workshop_navigation_drawer" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>